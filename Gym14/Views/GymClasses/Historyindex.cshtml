@model IEnumerable<Gym14.Models.History>

@{
    ViewData["Title"] = "Historyindex";
}

<h2>History of members at Gym 14</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th class="cdel">
                USMA
            </th>
            <th>
                E-mail
            </th>
            <th>
                Phone number
            </th>
            <th>
                Arrived date
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td class="sdel">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="sdel cdel">
                @if (item.Rtype == 'A')
                {
                    <span style="color:darkred">@Html.DisplayFor(modelItem => item.Rtype)</span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Rtype)
                }
            </td>
            <td class="sdel">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="sdel">
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td class="sdel">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td class="sdel">
                <a class="hdel" title="Delete this post?" asp-action="Historydelete" asp-route-id="@item.Id">X</a>
            </td>
        </tr>
    }
</table>
<div>
    <button type="button" class="aabutt"><a class="alink" asp-action="Create">Back to list</a></button>
</div>